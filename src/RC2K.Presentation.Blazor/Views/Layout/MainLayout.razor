@using RC2K.Presentation.Shared
@using RC2K.Presentation.Shared.Layout

@inherits LayoutComponentBase

<MudThemeProvider Theme="Rc2kColorPallete.MyCustomTheme" />
<MudPopoverProvider @rendermode="InteractiveServer" />
<MudDialogProvider @rendermode="InteractiveServer" />
<MudSnackbarProvider @rendermode="InteractiveServer" />


    <div class="page">
        <Header TNavMenu="AppNavMenu" @rendermode="InteractiveServer" />
        <main>
            <BreadcrumbsNavigation />
            <MyErrorBoundary @ref="_errorBoundary">
              <ChildContent >
                <article class="content">@Body</article>
              </ChildContent>
              <ErrorContent>
                <div background="red">ERROR</div>
              </ErrorContent>
            </MyErrorBoundary>
        </main>

        <Footer />
    </div>
 
  
 
@code {
  ErrorBoundary _errorBoundary;

  protected override void OnParametersSet()
  {
    _errorBoundary?.Recover();
  }
}