@using RC2K.Presentation.Blazor.ViewModels
@rendermode InteractiveServer

@code 
{
  [Parameter] public int[] Pieces {get;set; }
  [Parameter] public string[] Colors {get;set; }
}


<MudPaper Elevation="4"
Class="d-flex"
Style="width: 100%; height: 16px; overflow: hidden; border-radius: 4px;">

  @for (int i=0; i<Pieces.Length; i++)
  {
    if (Pieces[i] > 0)
    {
      <div class="d-flex align-center justify-center"
           style="background-color: @(Colors[i]); width: @(Pieces[i])%; min-width: 2ch; height: 100%; color: green; font-weight: bold; white-space: nowrap;">
      @(Pieces[i])%
    </div>
    }
  }
</MudPaper>